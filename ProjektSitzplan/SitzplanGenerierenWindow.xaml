                                                    </Grid>
                                                </StackPanel>
                                            </Grid>
                                            <!--#endregion-->

                                            <!--#region Tisch3-->
                                            <Grid x:Name="SGTisch3Grd" Grid.Column="0" Grid.Row="2" Visibility="Visible">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="102"/>
