<Window x:Class="ProjektSitzplan.MainWindow"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjektSitzplan" xmlns:System="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Height="600" Width="1000" MinHeight="600" MinWidth="1000"
        WindowStyle="None" ResizeMode="CanResize" AllowsTransparency="True"
        Activated="Window_Activated" Deactivated="Window_Deactivated">
    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="40"></WindowChrome>
    </WindowChrome.WindowChrome>
    <Border x:Name="WindowBorder" BorderThickness="1" BorderBrush="{StaticResource Gray}">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="200"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="60"></RowDefinition>
            </Grid.RowDefinitions>
            <Border Grid.ColumnSpan="3" Grid.Row="0" BorderThickness="0 0 0 1" BorderBrush="{StaticResource Gray}" Background="{StaticResource DarkBlue}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="200"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="200"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Grid Grid.Column="0">
                        <Label Content="LOGO SITZPLAN" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="{StaticResource Turqouise}" FontFamily="Segoe UI Semibold" FontSize="16"></Label>
                    </Grid>
                    <Grid Grid.Column="1">
                        <!-- TODO: -->
                    </Grid>
                    <Grid Grid.Column="2">
                        <Label Content="BUTTONS" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="{StaticResource Turqouise}" FontFamily="Segoe UI Semibold" FontSize="16"></Label>
                    </Grid>
                </Grid>
            </Border>
            <Grid Grid.Column="0" Grid.Row="1" Background="{StaticResource Blue}">
                
            </Grid>
            <Grid Grid.Column="1" Grid.Row="1" Background="{StaticResource VeryLightBlue}">
                <Button x:Name="TestButton" Grid.Column="1" Grid.Row="1" Content="Teste mich!" HorizontalAlignment="Center" VerticalAlignment="Center" Width="134" Click="TestButton_Click"/>
            </Grid>
            <Grid Grid.Column="2" Grid.Row="1" Background="{StaticResource Blue}">
                
            </Grid>
            <Border Grid.ColumnSpan="3" Grid.Row="3" BorderThickness="0 1 0 0" BorderBrush="{StaticResource Gray}" Background="{StaticResource DarkBlue}">
                
            </Border>
        </Grid>
    </Border>
</Window>
