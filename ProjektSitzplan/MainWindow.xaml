<Window x:Class="ProjektSitzplan.MainWindow"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjektSitzplan" xmlns:System="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Height="600" Width="1000" MinHeight="600" MinWidth="1000"
        WindowStyle="None" ResizeMode="CanResize" AllowsTransparency="True">
    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="32">
        </WindowChrome>
    </WindowChrome.WindowChrome>
    <Border x:Name="WindowBorder" BorderThickness="1" BorderBrush="{StaticResource 2}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="32"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="60"></RowDefinition>
            </Grid.RowDefinitions>
            <Border Grid.ColumnSpan="3" Grid.Row="0" BorderThickness="0 0 0 1" BorderBrush="{StaticResource 2}" Background="{StaticResource 1}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5 0 0 0">
                        <Label Content="LOGO" Foreground="{StaticResource 3}" FontFamily="Segoe UI Semibold" FontSize="16"></Label>
                        <Label Content="Sitzplan" Foreground="{StaticResource 3}" FontFamily="Segoe UI Semibold" FontSize="16" Margin="5 0 0 0"></Label>
                    </StackPanel>
                    <Grid Grid.Column="2" HorizontalAlignment="Right" WindowChrome.IsHitTestVisibleInChrome="True">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"></ColumnDefinition>
                            <ColumnDefinition Width="Auto"></ColumnDefinition>
                            <ColumnDefinition Width="Auto"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Button x:Name="WindowMinimizeButton" Grid.Column="0" Template="{StaticResource Flat}" Background="{x:Null}" Height="Auto" materialDesign:RippleAssist.Feedback="Transparent" IsTabStop="False" Click="WindowMinimizeButton_Click" PreviewMouseDown="WindowMinimizeButton_PreviewMouseDown" MouseEnter="WindowMinimizeButton_MouseEnter" MouseLeave="WindowMinimizeButton_MouseLeave">
                            <Image Source="/ProjektSitzplan;component/src/Design/Images/Minimize.png"></Image>
                        </Button>
                        <Button x:Name="WindowRestoreButton" Grid.Column="1" Template="{StaticResource Flat}" Background="{x:Null}" Height="Auto" materialDesign:RippleAssist.Feedback="Transparent" IsTabStop="False" Click="WindowRestoreButton_Click" PreviewMouseDown="WindowRestoreButton_PreviewMouseDown" MouseEnter="WindowRestoreButton_MouseEnter" MouseLeave="WindowRestoreButton_MouseLeave">
                            <Image Source="/ProjektSitzplan;component/src/Design/Images/Restore1.png"></Image>
                        </Button>
                        <Button x:Name="WindowCloseButton" Grid.Column="2" Template="{StaticResource Flat}" Background="{x:Null}" Height="Auto" materialDesign:RippleAssist.Feedback="Transparent" IsTabStop="False" Click="WindowCloseButton_Click" PreviewMouseDown="WindowCloseButton_PreviewMouseDown" MouseEnter="WindowCloseButton_MouseEnter" MouseLeave="WindowCloseButton_MouseLeave">
                            <Image Source="/ProjektSitzplan;component/src/Design/Images/Close.png"></Image>
                        </Button>
                    </Grid>
                </Grid>
            </Border>
            <Grid Grid.Column="0" Grid.Row="1" Background="{StaticResource 1}">
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Visible" IsTabStop="False">
                    <ItemsControl x:Name="SitzpläneItemsControl">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Grid>
                                    
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>
            <Grid Grid.Column="1" Grid.Row="1" Background="{StaticResource 1}">
                <Button x:Name="TestButton" Grid.Column="1" Grid.Row="1" Content="Ja" HorizontalAlignment="Center" VerticalAlignment="Center" Width="134" Click="TestButton_Click"/>
            </Grid>
            <Grid Grid.Column="0" Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                </Grid.RowDefinitions>
                <Border Grid.Column="0" Grid.Row="0" BorderThickness="0 1 0 0" BorderBrush="{StaticResource 2_1}">
                    <Menu Height="Auto" Background="{StaticResource 1}" Foreground="{StaticResource 4}" FontSize="14" FontFamily="Segoe UI Semibold">
                        <MenuItem Header="Datei " materialDesign:RippleAssist.IsDisabled="True" Height="25" Width="Auto" >
                            <MenuItem Header="Neu " Margin="0" materialDesign:RippleAssist.IsDisabled="True" Height="25" Width="Auto">
                                <MenuItem Header="Sitzplan " Margin="0" materialDesign:RippleAssist.IsDisabled="True" Height="25" Width="Auto"></MenuItem>
                                <MenuItem Header="Klasse " Margin="0" materialDesign:RippleAssist.IsDisabled="True" Height="25" Width="Auto"></MenuItem>
                                <MenuItem Header="Lehrer " Margin="0" materialDesign:RippleAssist.IsDisabled="True" Height="25" Width="Auto"></MenuItem>
                            </MenuItem>
                        </MenuItem>
                    </Menu>
                </Border>
            </Grid>
            <Border Grid.ColumnSpan="3" Grid.Row="3" BorderThickness="0 1 0 0" BorderBrush="{StaticResource 2}" Background="{StaticResource 1}">
                
            </Border>
        </Grid>
    </Border>
</Window>
